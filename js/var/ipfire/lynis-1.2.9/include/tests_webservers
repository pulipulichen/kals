            #if [ -d ${I} ]; then
	        #FIND=`grep -r LoadModule ${I}/* | grep -v "^#" | awk '{ print $2":"$3 }'`
	      #else
	        #logtext "Result: ${I} does not exist" 
	    #fi
	#done
    #fi
